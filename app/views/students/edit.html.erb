<%= simple_nested_form_for(@student, html: { class: 'form-horizontal' }) do |student_form| %>
	<div class="row">
		<div class="small-6 columns">
			<h3><%= controller.action_name.capitalize %> Student</h3>
			<%= render partial: "student_fields", locals: {f: student_form} %>

			<div class="form-actions">
				<%= student_form.submit nil, class: 'button radius' %>
				<%= link_to 'Back to list of students', students_path, class: 'button secondary radius' %>
			</div>
		</div>

    <div class="small-1 columns">&nbsp;</div>
      
    <div class="small-5 columns">
    	<% if controller.action_name=="edit" && @student.active %>
			<%= student_form.simple_fields_for :registrations do |registration_form| %>
				<%= render partial: "registration_fields", locals: {f: registration_form, action: controller.action_name } %>
			<% end %>
			<br /><%= student_form.link_to_add("Add Registration", :registrations, class: 'button tiny') %>
      	<% end %>
    </div>
  </div>
<% end %>
