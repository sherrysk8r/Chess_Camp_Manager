<h3>Active Locations</h3>

<table class="table">
  <tr>
    <th width="200">Name</th>
    <th width="200">Address</th>
    <th width="200">Capacity</th>
    <th width="100">Times Used</th>
    <th></th>
  </tr>

<% @active_locations.each do |location| %>
  <tr>
    <td><%= link_to location.name, location_path(location) %></td>
    <td><%= location.street_1 %>
      <% unless location.street_2.nil? %>
        <br /><%= location.street_2 %>
      <% end %>
      <br /><%= location.city %>, <%= location.state %> <%= location.zip %><br /><br /></td>  
    <td align="center"><%= location.max_capacity %></td>
    <td align="center"><%= location.camps.size %></td>
    <td><%= link_to 'Edit', edit_location_path(location), class: "button tiny radius" %></td>
  </tr>
<% end %>
</table>

<%= render partial: "partials/add_pagination", locals: {objects: @active_locations} %>
